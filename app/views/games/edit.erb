<h1>Welcome to the edit page!</h1>

<form method="post" action="/games/<%=@current_game.slug%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= @current_game.title %>"><br>
  <label for="description">Description:</label>
  <input type="text" name="description" size="100" value="<%= @current_game.description %>"><br>
  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="<%= @current_game.genre %>"><br>
  <label for="price">Price:</label>
  <input type="float" name="price" value="<%= @current_game.price %>"><br>
  <input type="submit" value="submit">
</form>
